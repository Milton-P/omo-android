<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_gravity="center"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="16dp"
    card_view:cardCornerRadius="4dp">

    <RelativeLayout
        android:id="@+id/rl"
        android:background="@drawable/list_button_press"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="8dp">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ll_status_time"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textGray"
                android:text="订单状态"/>

            <TextView
                android:id="@+id/time"
                android:layout_marginLeft="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015-04-01 12:34:21"/>

            </LinearLayout>
        
        <RelativeLayout
            android:layout_marginTop="4dp"
            android:layout_below="@id/ll_status_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
        
            <ImageView
                android:layout_centerVertical="true"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:id="@+id/icon"
                android:src="@mipmap/ic_launcher"/>
    
            <TextView
                android:layout_marginLeft="16dp"
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/icon"
                android:text="hello world"
                android:textAppearance="@android:style/TextAppearance.Medium"/>
    
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/info"
                android:text="@string/hello_world"
                android:layout_below="@id/name"
                android:layout_alignLeft="@id/name"/>
    
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@android:style/TextAppearance.Medium"
                android:textColor="@color/red_logout"
                android:id="@+id/cost"
                android:text="$10"
                android:layout_marginTop="4dp"
                android:layout_below="@id/info"
                android:layout_alignLeft="@id/info"/>

            <TextView
                android:id="@+id/count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="8dp"
                android:layout_toRightOf="@id/cost"
                android:layout_alignTop="@id/cost"
                android:text="共1份"/>
    

        </RelativeLayout>

    </RelativeLayout>


</android.support.v7.widget.CardView>